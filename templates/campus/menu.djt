{% load parking %}
<div id="menu">
	<div id="menu-header">
		<h2>
			<a id="tab-one"><span class="l"></span><span>Menu</span><span class="r"></span></a>
			<a id="tab-two"><span class="l"></span><span id="menu-title"></span><span class="r"></span></a>
			<div class="gap"></div>
		</h2>

		<div id="menu-icons">
			<a href="" id="email" title="Share this Location">email</a>
			<a href="" id="print" title="Print" target="blank">print</a>
		</div>
	</div>
	<div id="menu-body">

		<div id="menu-window">

			<div id="menu-1" class="slide">
				<div class="item" id="item-desc">
					<img src="{{ STATIC_URL }}images/home.jpg">
				</div>
				<a class="item" href="{% url 'locations' %}">Locations &amp; Buildings</a>
				<a class="item" href="{% url 'organizations' %}">Organizations &amp; Depts</a>
				<div id="layers" class="clearfix">
					<label><input type="checkbox" id="parking"> Parking</label>
					<label><input type="checkbox" id="traffic"> Traffic</label>
					<label><input type="checkbox" id="food"> Food</label>
					<label><input type="checkbox" id="bikeracks"> Bike Racks</label>
					<label><input type="checkbox" id="emergency-phones"> Emergency</label>
                    <label><input type="checkbox" id="shuttle-routes"> Shuttles</label>
				</div>
				<div class="more-menu">
					<span>&nbsp;</span>
					<a class="next nav" data-nav="2" id="nav-2">Next Menu &#9654;</a>
					<div class="clear"></div>
				</div>
			</div>

			<div id="menu-2" class="slide">

				<a class="item" href="{% url 'page' 'printable' %}">Printable Map</a>
				<a class="item" href="{% url 'page' 'directions' %}">Directions to UCF</a>

				<h3>Map view options:</h3>
				<label><input type="checkbox" id="buildings"> Buildings</label>
				<label><input type="checkbox" id="sidewalks"> Walking Paths</label>

				<!-- <h3>Coming Soon:</h3>
				<label class="disabled"><input type="checkbox" disabled="disabled"> Entrances/Exits</label>
				<label class="disabled"><input type="checkbox" disabled="disabled"> Housing</label> -->

				<div class="more-menu">
					<a class="prev nav" data-nav="1">&#9664; Previous Menu</a>
					<a class="next nav" data-nav="3" id="nav-3">Next Menu &#9654;</a>
					<div class="clear"></div>
				</div>
			</div>

			<div id="menu-3" class="slide">
				<a class="item" href="{% url 'page' 'about' %}">About &amp; More</a>

				<div class="more-menu">
					<a class="prev nav" data-nav="2">&#9664; Previous Menu</a>
					<div class="clear"></div>
				</div>
			</div>

			<div id="menu-stage" class="slide">
				<div class="item load">
					Loading...
				</div>
			</div>

		</div>
		<div id="menu-screen"></div>
		<div class="clear"></div>
	</div><!-- /menu-bottom -->
</div>
<a id="menu-hide" title="Collapse Menu" >&nbsp;</a>

{# parking key #}
<div style="display:none;" id="parking-key-content">
	<div id="parking-key">
		<div class="item">
			<h3>Parking Permit Key</h3>
			{% permits %}
		</div>
		<a class="item" href="http://parking.ucf.edu/maps/" target="blank">Download Parking Guide</a>
		<a class="item" href="http://parking.ucf.edu/" target="blank">Parking Services Website</a>
	</div>
</div>

<div style="display:none;" id="shuttle-routes-content">
    <div id="shuttle-routes">
        <a class="item" id="shuttle-info-button" href="#shuttle-info">Information <img src="{{ STATIC_URL }}images/info-icon.png" alt="Shuttle Information"></a>
        <div id="shuttle-stop-wrapper">
            <select>
            <option value="">Select a Stop</option>
            </select>
        </div>
        <div id="route-information">
	        <h3 class="c">Routes</h3>
	        <div>
	            <label><input type="checkbox" id="refresh-shuttle-gps" checked="checked"> Track Shuttles in Real-time</label>
	        </div>
	        <div id="on-campus-routes">
	            <h4>On-Campus</h4>
	        </div>
	        <div id="off-campus-routes">
	            <h4>Off-Campus</h4>
	        </div>
	        <div id="other-routes">
	            <h4>Other</h4>
	        </div>
        </div>
    </div>
</div>

<div style="display:none;" id="shuttle-info">
    <div class="shuttle-info-wrapper" >
    <a class="item shuttle-routes-btn">Back to Shuttles</a>
        {% if shuttle_info %}
            {{ shuttle_info|safe }}
        {% endif %}
    </div>
</div>




